<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: #F1EFEF;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.edu.utez.biblioteca.controller.VerPrestamoController"
            stylesheets="@../css/verModal.css">
    <children>
        <VBox alignment="TOP_LEFT" layoutX="20.0" layoutY="20.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <VBox alignment="TOP_LEFT" layoutX="20.0" layoutY="20.0" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <children>
                        <VBox spacing="0.0">
                            <children>
                            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Préstamo" styleClass="titulo"/>
                            <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Detalles del préstamo:" />
                            </children>
                        </VBox>

                    </children>
                </VBox>
                <GridPane hgap="20.0" vgap="10.0"> <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Nombre usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtNombreUsuario" editable="false" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-background-color: #C7C7C7;"/>

                        <Label text="Fecha límite:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtFechaLimite" editable="false" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-background-color: #C7C7C7;"/>

                        <Label text="Título del libro:" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtTituloLibro" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #C7C7C7;"/>

                        <Label text="Fecha real:" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtFechaReal" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-color: #C7C7C7;"/>

                        <Label text="Fecha préstamo:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtFechaPrestamo" editable="false" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-background-color: #C7C7C7;"/>

                        <Label text="Estado:" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtEstado" editable="false" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-background-color: #C7C7C7;"/>
                    </children>
                </GridPane>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cerrar" styleClass="button-guardar" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>