<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="650.0" spacing="20.0"  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.biblioteca.controller.VerBibliotecarioController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Ver Bibliotecario" styleClass="title-label">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <Label text="Información de solo lectura" textFill="#888888" />
    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <ImageView fx:id="imgFoto" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"> </ImageView>
        <GridPane hgap="15.0" vgap="15.0" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="Nombre completo:" GridPane.rowIndex="0" />
            <TextField fx:id="txtNombre" editable="false" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />
            <Label text="Correo:" GridPane.rowIndex="1" />
            <TextField fx:id="txtCorreo" editable="false" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <Label text="Teléfono:" GridPane.rowIndex="2" />
            <TextField fx:id="txtTelefono" editable="false" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            <Label text="Usuario:" GridPane.rowIndex="3" />
            <TextField fx:id="txtUsuario" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Estado:" GridPane.rowIndex="4" />
            <TextField fx:id="txtEstado" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>
    </HBox>
    <Label fx:id="lblDireccion" text="Dirección:" styleClass="subtitle-label" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" />
    <TextArea fx:id="txtDireccion" editable="false" prefHeight="80.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS" />
    <Button fx:id="btnCerrar" mnemonicParsing="false" text="Cerrar" onAction="#onClose" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets top="10.0" />
        </HBox.margin>
    </Button>
</VBox>
