<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="mx.edu.utez.biblioteca.controller.ModalCerrarSesionController"
            prefWidth="500" prefHeight="300" style="-fx-background-color: #F1EFEF;">

    <Text text="¿Deseas cerrar sesión?" layoutX="80" layoutY="130"
          style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <HBox spacing="20" layoutX="110" layoutY="170">
        <Button fx:id="cancelarButton" text="Cancelar"
                style="-fx-background-color: transparent;
                       -fx-border-color: #A38F85;
                       -fx-border-width: 1.5;
                       -fx-text-fill: #A38F85;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-padding: 10 20 10 20;
                       -fx-background-radius: 5;
                       -fx-border-radius: 5;" />

        <Button fx:id="aceptarButton" text="Aceptar"
                style="-fx-background-color: #A38F85;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-padding: 10 20 10 20;
                       -fx-background-radius: 5;
                       -fx-border-radius: 5;" />
    </HBox>
</AnchorPane>
