<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane stylesheets="@../css/busqueda.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.biblioteca.controller.BusquedaController">

    <left>
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>
            <Button styleClass="nav-button" text="Inicio">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <image>
                            <Image url="@../img/bienvenida.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="nav-button" text="Búsqueda">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <image>
                            <Image url="@../img/buscar.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </left>

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="628.0" spacing="10" styleClass="header">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label styleClass="titulo" text="Buscar libro" />
            <Button styleClass="botonLogin" text="Iniciar sesión">
            </Button>
        </HBox>
    </top>


</BorderPane>

