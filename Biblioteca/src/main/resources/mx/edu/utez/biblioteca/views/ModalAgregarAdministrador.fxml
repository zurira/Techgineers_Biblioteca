<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.StackPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.biblioteca.controller.ModalAgregarAdminController"
            prefWidth="950" prefHeight="570"
            style="-fx-background-color: #F1EFEF;">

    <Label layoutX="250" layoutY="20" text="Agregar administrador"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #5C4B4B;"/>
    <Label layoutX="250" layoutY="50" text="Ingresa la información correctamente"
           style="-fx-font-size: 14px;"/>

    <!-- Imagen y botón con altura fija -->
    <VBox layoutX="30" layoutY="70" spacing="10">
        <StackPane prefWidth="160" prefHeight="280"
                   style="-fx-background-color: #F1EFEF;">
            <ImageView fx:id="imageView" fitWidth="160" fitHeight="280" preserveRatio="true"/>
        </StackPane>
        <Button fx:id="btnSeleccionarImagen" text="Seleccionar archivo"
                onAction="#seleccionarImagen"
                style="-fx-background-color: #A38F85; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </VBox>

    <Label layoutX="250" layoutY="85" text="Nombre completo:*"/>
    <TextField fx:id="txtNombre" layoutX="250" layoutY="110" prefWidth="300" prefHeight="35"/>

    <Label layoutX="580" layoutY="85" text="Correo:*"/>
    <TextField fx:id="txtCorreo" layoutX="580" layoutY="110" prefWidth="300" prefHeight="35"/>

    <Label layoutX="250" layoutY="160" text="Teléfono:*"/>
    <TextField fx:id="txtTelefono" layoutX="250" layoutY="185" prefWidth="300" prefHeight="35"/>

    <Label layoutX="580" layoutY="160" text="Usuario:*"/>
    <TextField fx:id="txtUsuario" layoutX="580" layoutY="185" prefWidth="300" prefHeight="35"/>

    <Label layoutX="250" layoutY="235" text="Contraseña:*"/>
    <StackPane layoutX="250" layoutY="260" prefWidth="300" prefHeight="35">
        <PasswordField fx:id="txtContrasena" promptText="Contraseña"
                       prefWidth="300" prefHeight="35" style="-fx-padding: 0 30 0 5;"/>
        <TextField fx:id="txtContrasenaVisible" promptText="Contraseña"
                   prefWidth="300" prefHeight="35" visible="false" managed="false"
                   style="-fx-padding: 0 30 0 5;"/>
        <Button fx:id="btnTogglePassword"
                style="-fx-background-color: transparent; -fx-cursor: hand;"
                maxHeight="20" prefWidth="30"
                StackPane.alignment="CENTER_RIGHT" translateX="-5">
            <graphic>
                <FontIcon iconLiteral="fa-eye" iconSize="16"/>
            </graphic>
        </Button>
    </StackPane>

    <Label layoutX="580" layoutY="235" text="Rol:*"/>
    <TextField fx:id="txtRol" layoutX="580" layoutY="260" prefWidth="300" prefHeight="35"/>

    <Label layoutX="250" layoutY="310" text="Dirección:"/>
    <TextArea fx:id="txtDireccion" layoutX="250" layoutY="335" prefWidth="630" prefHeight="65"
              wrapText="true"
              style="-fx-background-color: white; -fx-border-color: #A38F85; -fx-border-radius: 5;"/>

    <HBox layoutX="670" layoutY="450" spacing="10">
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cerrarModal"
                style="-fx-background-color: #EDE7E3; -fx-text-fill: #A38F85; -fx-font-weight: bold;"/>
        <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarAdministrador"
                style="-fx-background-color: #A38F85; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</AnchorPane>
