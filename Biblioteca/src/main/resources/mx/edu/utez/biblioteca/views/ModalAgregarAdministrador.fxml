<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.biblioteca.controller.ModalAgregarAdminController"
            prefWidth="920" prefHeight="570"
            style="-fx-background-color: #F1EFEF;">

    <VBox spacing="15" layoutX="20" layoutY="20" prefWidth="880">
        <!-- Título -->
        <Label text="Agregar administrador" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Label text="Ingresa la información correctamente" style="-fx-font-size: 14px;"/>

        <HBox spacing="30">
            <!-- Imagen y botón -->
            <VBox spacing="10">
                <ImageView fx:id="imageView" fitWidth="160" fitHeight="160" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, #A38F85, 8, 0.3, 0, 2);"/>
                <Button text="Seleccionar archivo" fx:id="btnSeleccionarImagen"
                        style="-fx-background-color: #A38F85; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="160"/>
            </VBox>

            <!-- Campos del formulario en 2 filas × 3 columnas -->
            <GridPane hgap="20" vgap="20" prefWidth="660">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Fila 1 -->
                <Label text="Nombre completo:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-pref-height: 36;"/>

                <Label text="Correo:*" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-pref-height: 36;"/>

                <Label text="Teléfono:*" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-pref-height: 36;"/>

                <!-- Fila 2 -->
                <Label text="Usuario:*" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="txtUsuario" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-pref-height: 36;"/>

                <Label text="Contraseña:*" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <PasswordField fx:id="txtContrasena" style="-fx-padding: 0 30 0 5; -fx-pref-height: 36;"/>
                    <TextField fx:id="txtContrasenaVisible" visible="false" managed="false"
                               style="-fx-padding: 0 30 0 5; -fx-pref-height: 36;"/>
                    <Button fx:id="btnTogglePassword"
                            style="-fx-background-color: transparent; -fx-cursor: hand;"
                            StackPane.alignment="CENTER_RIGHT" translateX="-5">
                        <graphic>
                            <FontIcon iconLiteral="fa-eye" iconSize="16"/>
                        </graphic>
                    </Button>
                </StackPane>

                <Label text="Rol:*" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="txtRol" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-pref-height: 36;"/>
            </GridPane>
        </HBox>

        <!-- Dirección -->
        <Label text="Dirección:"/>
        <TextArea fx:id="txtDireccion"
                  prefWidth="850"
                  prefHeight="80"
                  wrapText="true"
                  style="-fx-background-color: white; -fx-border-color: #A38F85; -fx-border-radius: 5; -fx-pref-height: 80;"/>

        <!-- Botones -->
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Button text="Cancelar" fx:id="btnCancelar"
                    style="-fx-background-color: #E2DAD6; -fx-text-fill: #5C504A; -fx-font-weight: bold;"/>
            <Button text="Guardar" fx:id="btnGuardar"
                    style="-fx-background-color: #A38F85; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>
