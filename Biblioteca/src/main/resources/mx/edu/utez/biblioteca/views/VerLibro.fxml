<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Reemplazamos SplitPane por HBox para eliminar el separador -->
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<HBox prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/VerLibro.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.biblioteca.controller.VerLibroController">
    <!-- Panel Izquierdo: Contenedor para la imagen y el título "Información del libro" -->
    <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="360.0" styleClass="image-container" HBox.hgrow="NEVER">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <!-- Título que resalta, ahora en el panel izquierdo -->
            <Label text="Información del libro" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                <children>

                    <HBox alignment="CENTER" styleClass="image-box">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                        <children>
                            <ImageView fx:id="imgPortada" fitHeight="400.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view" />
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </VBox>

    <!-- Panel Derecho: Todos los campos del formulario -->
    <VBox spacing="20.0" styleClass="info-container" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <VBox styleClass="table-like-container" spacing="10.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <!-- Primera fila de campos -->
                    <HBox spacing="20.0">
                        <children>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label styleClass="label-form" text="Titulo:" />
                                <TextField fx:id="txtTitulo" editable="false" />
                            </VBox>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label styleClass="label-form" text="ISBN:" />
                                <TextField fx:id="txtIsbn" editable="false" />
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Segunda fila de campos -->
                    <HBox spacing="20.0">
                        <children>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label styleClass="label-form" text="Autor:" />
                                <TextField fx:id="txtAutor" editable="false" />
                            </VBox>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label styleClass="label-form" text="Editorial:" />
                                <TextField fx:id="txtEditorial" editable="false" />
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Tercera fila de campos -->
                    <HBox spacing="20.0">
                        <children>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label styleClass="label-form" text="Categoria:" />
                                <TextField fx:id="txtCategoria" editable="false" />
                            </VBox>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label styleClass="label-form" text="Año de Publicación:" />
                                <TextField fx:id="txtAnioPublicacion" editable="false" />
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Área de Sinopsis -->
                    <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                        <children>
                            <Label styleClass="label-form" text="Sinopsis" />
                            <TextArea fx:id="txtSinopsis" editable="false" prefHeight="200.0" wrapText="true" VBox.vgrow="ALWAYS" />
                        </children>
                    </VBox>
                </children>
            </VBox>
            <VBox spacing="5.0" styleClass="table-container" VBox.vgrow="ALWAYS">
                <Label styleClass="label-form" text="Ejemplares existentes" />
                <TableView fx:id="tableEjemplares" prefHeight="200.0" prefWidth="200.0" styleClass="table-view" >
                    <columns>
                        <TableColumn fx:id="colCodigoLocal" prefWidth="120.0" text="Código Local" />
                        <TableColumn fx:id="colUbicacion" prefWidth="150.0" text="Ubicación" />
                        <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Botón de cerrar -->
            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                <children>
                    <Button fx:id="btnCerrar" onAction="#onClose" styleClass="primary-button" text="Cerrar" />
                </children>
            </HBox>
        </children>
    </VBox>

</HBox>
