<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8" fx:controller="mx.edu.utez.biblioteca.controller.VerUsuarioController"
            stylesheets="@../css/VerUsuario.css"
            prefWidth="450" prefHeight="550"> <VBox spacing="15.0" alignment="TOP_CENTER"
                                                    AnchorPane.topAnchor="20.0"
                                                    AnchorPane.leftAnchor="20.0"
                                                    AnchorPane.rightAnchor="20.0"
                                                    AnchorPane.bottomAnchor="20.0">

    <Text text="Detalles del Usuario" styleClass="titulo"/>
    <Text text="Información completa del usuario" styleClass="subtitulo"/>

    <ImageView fx:id="imgFoto" fitWidth="120" fitHeight="120" preserveRatio="true" styleClass="user-photo">
    </ImageView>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label-bold"/>
        <Label fx:id="lblNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Fecha de Nacimiento:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label-bold"/>
        <Label fx:id="lblFechaNacimiento" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Correo:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label-bold"/>
        <Label fx:id="lblCorreo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label-bold"/>
        <Label fx:id="lblTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Dirección:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="label-bold"/>
        <Label fx:id="lblDireccion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Estado:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="label-bold"/>
        <Label fx:id="lblEstado" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10.0" alignment="CENTER" VBox.vgrow="ALWAYS">
        <Button text="Cerrar" onAction="#cerrarVentana" styleClass="boton-cerrar"/>
    </HBox>

</VBox>
</AnchorPane>