<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextArea?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="mx.edu.utez.biblioteca.controller.VerUsuarioController"
            prefWidth="950" prefHeight="570" style="-fx-background-color: #F1EFEF;"
            stylesheets="@../css/verModal.css">

    <VBox spacing="10" layoutX="30" layoutY="20" prefWidth="860">
        <!-- Títulos principales -->
        <Label text="Información del Usuario" styleClass="titulo"/>
        <Label text="Detalles del usuario" styleClass="subtitulo"/>

        <HBox spacing="20">
            <!-- Sección de la foto -->
            <VBox spacing="10" alignment="TOP_CENTER">
                <Label text="Foto:" styleClass="field-label"/>
                <ImageView fx:id="imgFoto" fitWidth="250" fitHeight="250" preserveRatio="true"/>
            </VBox>

            <!-- Sección de los campos de información -->
            <GridPane hgap="20" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <!-- Fila 1 -->
                <Label text="Nombre completo:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="field-label"/>
                <TextField fx:id="txtNombre" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="text-field" editable="false"/>

                <Label text="Correo:" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="field-label"/>
                <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field" editable="false"/>

                <!-- Fila 2 -->
                <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="field-label"/>
                <TextField fx:id="txtTelefono" GridPane.columnIndex="0" GridPane.rowIndex="3"  styleClass="text-field" editable="false"/>

                <Label text="Fecha Nacimiento:" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="field-label"/>
                <DatePicker fx:id="dpFechaNacimiento" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="date-picker" editable="false"/>

                <!-- Fila 3 - Dirección (ESTA SECCIÓN CAUSABA EL ERROR) -->
                <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="field-label"/>
                <TextField fx:id="txtDireccion" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" styleClass="text-area" editable="false" />
            </GridPane>
        </HBox>

        <!-- Botones -->
        <HBox spacing="10" alignment="BOTTOM_RIGHT" HBox.hgrow="ALWAYS">
            <VBox.margin>
                <Insets right="20.0" bottom="20.0"/>
            </VBox.margin>
            <Button fx:id="btnCerrar" text="Cerrar" onAction="#cerrarVentana" styleClass="button-guardar"/>
        </HBox>
    </VBox>
</AnchorPane>
