<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefHeight="550.0" prefWidth="900.0" stylesheets="@../css/editarBiblio.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.biblioteca.controller.EditarBibliotecarioController">
    <!-- Contenedor para el título principal y la leyenda -->
    <VBox>
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label styleClass="label-form" text="Editar Bibliotecario" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        <!-- Nueva leyenda agregada -->
        <Label style="-fx-font-size: 14px; -fx-text-fill: #5C504A;" text="Ingresa la información correctamente" />
    </VBox>
    <!-- Contenedor principal para la foto y los campos -->
    <HBox prefHeight="600.0" prefWidth="900.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Panel Izquierdo: Contenedor para la foto y el botón de carga -->
        <VBox alignment="TOP_CENTER" prefWidth="360.0" styleClass="image-container" HBox.hgrow="NEVER">
            <children>
                <Label styleClass="label-form" text="Foto:" />
                <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view" />
                <Button fx:id="btnSeleccionarImagen" onAction="#onSeleccionarImagen" styleClass="button-secondary" text="Seleccionar archivo" />
            </children>
        </VBox>

        <!-- Panel Derecho: Todos los campos del formulario -->
        <VBox spacing="20.0" styleClass="info-container" HBox.hgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Primera fila de campos -->
                        <HBox spacing="20.0">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label styleClass="label-form" text="Nombre completo:*" />
                                    <TextField fx:id="txtNombre" styleClass="text-field" style="-fx-border-color: #A38F85;" />
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label styleClass="label-form" text="Correo:*" />
                                    <TextField fx:id="txtCorreo" styleClass="text-field" style="-fx-border-color: #A38F85;" />
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Segunda fila de campos -->
                        <HBox spacing="20.0">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label styleClass="label-form" text="Teléfono:*" />
                                    <TextField fx:id="txtTelefono" styleClass="text-field" style="-fx-border-color: #A38F85;" />
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label styleClass="label-form" text="Usuario:*" />
                                    <TextField fx:id="txtUsuario" styleClass="text-field" style="-fx-border-color: #A38F85;" />
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Tercera fila de campos (Contraseña) -->
                        <HBox spacing="20.0">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label styleClass="label-form" text="Contraseña:*" />
                                    <StackPane alignment="CENTER_RIGHT" styleClass="password-container">
                                        <PasswordField fx:id="txtPassword" promptText="Nueva contraseña (opcional)" styleClass="password-field" style="-fx-border-color: #A38F85;" />
                                        <TextField fx:id="txtPasswordVisible" managed="false" promptText="Nueva contraseña (opcional)" visible="false" />
                                        <Button fx:id="togglePasswordBtn" onAction="#togglePasswordVisibility" styleClass="icon-button">
                                            <graphic>
                                                <FontIcon iconLiteral="fa-eye" styleClass="eye-icon" />
                                            </graphic>
                                        </Button>
                                    </StackPane>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Área de Dirección ajustada -->
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="label-form" text="Dirección" />
                                <TextArea fx:id="txtDireccion" prefHeight="100.0" wrapText="true" styleClass="text-area" style="-fx-border-color: #A38F85; -fx-background-color: white;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Botones de acción -->
                <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnCancelar" onAction="#onCancelar" styleClass="button-secondary" text="Cancelar" />
                        <Button fx:id="btnGuardar" onAction="#onGuardar" styleClass="button-primary" text="Guardar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </HBox>
</VBox>