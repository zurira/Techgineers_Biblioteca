<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.biblioteca.controller.LibroFormController">
    <children>
        <Label styleClass="label-title" text="Detalles del Libro" />

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="80.0" prefHeight="80.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="150.0" prefHeight="150.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Título:" styleClass="label" />
                <TextField fx:id="txtTitulo" promptText="Título del libro" GridPane.columnIndex="1" styleClass="text-field" />

                <Label text="ISBN:" GridPane.rowIndex="1" styleClass="label" />
                <TextField fx:id="txtIsbn" promptText="ISBN del libro" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field" />

                <Label text="Resumen:" GridPane.rowIndex="2" styleClass="label" />
                <TextArea fx:id="txtResumen" promptText="Breve resumen o sinopsis" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-area" />

                <Label text="Año Publicación:" GridPane.rowIndex="3" styleClass="label" />
                <TextField fx:id="txtAnioPublicacion" promptText="Ej: 2023" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="text-field" />

                <Label text="Editorial:" GridPane.rowIndex="4" styleClass="label" />
                <ComboBox fx:id="cmbEditorial" prefWidth="1.7976931348623157E308" promptText="Selecciona una editorial" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="combo-box" />

                <Label text="Autor:" GridPane.rowIndex="5" styleClass="label" />
                <ComboBox fx:id="cmbAutor" prefWidth="1.7976931348623157E308" promptText="Selecciona un autor" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="combo-box" />

                <Label text="Categoría:" GridPane.rowIndex="6" styleClass="label" />
                <ComboBox fx:id="cmbCategoria" prefWidth="1.7976931348623157E308" promptText="Selecciona una categoría" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="combo-box" />

                <Label text="Estado:" GridPane.rowIndex="7" styleClass="label" />
                <ComboBox fx:id="cmbEstado" prefWidth="1.7976931348623157E308" promptText="Selecciona el estado" GridPane.columnIndex="1" GridPane.rowIndex="7" styleClass="combo-box" />

                <Label text="Portada:" GridPane.rowIndex="8" styleClass="label" />
                <VBox alignment="TOP_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
                    <children>
                        <ImageView fx:id="coverImageView" fitHeight="150.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="false" styleClass="cover-image-view">
                            <!-- La imagen por defecto ya no se carga aquí -->
                        </ImageView>
                        <Button mnemonicParsing="false" onAction="#onSelectImage" styleClass="button, button-select-image" text="Seleccionar Imagen" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onSave" styleClass="button, button-save" text="Guardar" />
                <Button mnemonicParsing="false" onAction="#onCancel" styleClass="button, button-cancel" text="Cancelar" />
            </children>
        </HBox>
    </children>
</VBox>