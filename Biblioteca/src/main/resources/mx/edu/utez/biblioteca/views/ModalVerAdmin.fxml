<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.biblioteca.controller.ModalVerAdminController"
            prefWidth="950" prefHeight="570"
            style="-fx-background-color: #F1EFEF;">

    <!-- Foto -->
    <VBox layoutX="30" layoutY="70">
        <ImageView fx:id="imgFoto" fitWidth="160" fitHeight="160" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"/>
    </VBox>

    <!-- Título del modal -->
    <Label layoutX="30" layoutY="20" text="Información del administrador"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>



</AnchorPane>
