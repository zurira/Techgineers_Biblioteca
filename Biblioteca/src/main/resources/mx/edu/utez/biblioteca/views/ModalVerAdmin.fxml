<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.biblioteca.controller.ModalVerAdminController"
            prefWidth="950" prefHeight="570"
            style="-fx-background-color: #F1EFEF;">

    <!-- Título -->
    <Label layoutX="30" layoutY="20" text="Información del administrador"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #5C504A;"/>

    <!-- Contenedor principal -->
    <HBox layoutX="30" layoutY="70" spacing="40" prefWidth="890">

        <!-- Columna izquierda: Imagen -->
        <VBox spacing="10" prefWidth="160">
            <StackPane prefWidth="160" prefHeight="340"
                       style="-fx-background-color: #F1EFEF; -fx-border-color: #A38F85; -fx-border-radius: 5;">
                <ImageView fx:id="imgFoto" fitWidth="160" fitHeight="340" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"/>
            </StackPane>
        </VBox>

        <!-- Columna derecha: Datos -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">

            <!-- Fila 1 -->
            <HBox spacing="20">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Nombre completo:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblNombre" prefWidth="200" maxWidth="Infinity"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Correo:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblCorreo" prefWidth="200" maxWidth="Infinity"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
            </HBox>

            <!-- Fila 2 -->
            <HBox spacing="20">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Teléfono:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblTelefono" prefWidth="200" maxWidth="Infinity"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Usuario:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblUsuario" prefWidth="200" maxWidth="Infinity"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
            </HBox>

            <!-- Fila 3 -->
            <HBox spacing="20">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Contraseña:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblContrasena" prefWidth="200" maxWidth="Infinity"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Rol:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblRol" prefWidth="200" maxWidth="Infinity"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
            </HBox>

            <!-- Fila 4 -->
            <HBox spacing="20">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Estado:" style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>
                    <Label fx:id="lblEstado" prefWidth="330"
                           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
                                  -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>
                </VBox>
            </HBox>

        </VBox>
    </HBox>

    <!-- Dirección -->
    <Label layoutX="240" layoutY="340" text="Dirección:"
           style="-fx-font-weight: bold; -fx-text-fill: #5C504A;"/>

    <Label fx:id="lblDireccion" layoutX="240" layoutY="365" prefWidth="670" wrapText="true"
           style="-fx-background-color: #E2DAD6; -fx-border-color: #A38F85; -fx-border-radius: 5;
          -fx-padding: 8px 10px; -fx-font-size: 14px; -fx-text-fill: #5C504A;"/>





    <!-- Botón cerrar -->
    <HBox layoutX="800" layoutY="500" spacing="10">
        <Button text="Cerrar" onAction="#cerrarVentana"
                style="-fx-background-color: #A38F85; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 10px 20px;"/>
    </HBox>

</AnchorPane>
