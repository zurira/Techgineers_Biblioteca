<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.biblioteca.controller.ModalVerAdminController"
            prefWidth="950" prefHeight="570"
            style="-fx-background-color: #F1EFEF;">

    <!-- Foto -->
    <VBox layoutX="30" layoutY="70">
        <ImageView fx:id="imgFoto" fitWidth="160" fitHeight="160" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"/>
    </VBox>

    <!-- Título del modal -->
    <Label layoutX="30" layoutY="20" text="Información del administrador"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Campos de solo lectura con estilo visual -->
    <Label layoutX="250" layoutY="70" text="Nombre completo:"/>
    <Label fx:id="lblNombre" layoutX="250" layoutY="95" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="470" layoutY="70" text="Correo:"/>
    <Label fx:id="lblCorreo" layoutX="470" layoutY="95" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="690" layoutY="70" text="Teléfono:"/>
    <Label fx:id="lblTelefono" layoutX="690" layoutY="95" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="250" layoutY="135" text="Usuario:"/>
    <Label fx:id="lblUsuario" layoutX="250" layoutY="160" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="470" layoutY="135" text="Contraseña:"/>
    <Label fx:id="lblContrasena" layoutX="470" layoutY="160" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="690" layoutY="135" text="Rol:"/>
    <Label fx:id="lblRol" layoutX="690" layoutY="160" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="250" layoutY="200" text="Estado:"/>
    <Label fx:id="lblEstado" layoutX="250" layoutY="225" prefWidth="200"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>

    <Label layoutX="30" layoutY="280" text="Dirección:"/>
    <Label fx:id="lblDireccion" layoutX="30" layoutY="305" prefWidth="860" wrapText="true"
           style="-fx-background-color: white; -fx-border-color: #ccc; -fx-padding: 5;"/>



</AnchorPane>
