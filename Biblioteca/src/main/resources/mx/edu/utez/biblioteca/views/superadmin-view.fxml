<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.edu.utez.biblioteca.controller.SuperAdminController"
            prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../css/superadmin-style.css">

    <HBox alignment="TOP_LEFT" prefHeight="700.0" prefWidth="1200.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <children>

            <!-- Área de contenido -->
            <VBox HBox.hgrow="ALWAYS">
                <children>

                    <!-- Barra superior -->
                    <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="10.0" styleClass="top-bar">
                        <Label styleClass="title-text" text="Administradores registrados">
                            <font>
                                <Font size="24.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Label>
                        <HBox HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER_RIGHT" styleClass="user-info-box">
                            <children>
                                <HBox alignment="CENTER" spacing="5.0">
                                    <FontIcon iconLiteral="fa-user" iconSize="24" styleClass="user-icon" />
                                    <Label styleClass="user-name" text="Superadministrador" />
                                    <Button fx:id="logoutButton" styleClass="logout-button">
                                        <graphic>
                                            <FontIcon iconLiteral="fa-sign-out" iconSize="24" styleClass="arrow-icon" />
                                        </graphic>
                                    </Button>
                                </HBox>
                                <Label styleClass="user-sub-label" text="Jazmín Rogel" />
                            </children>
                        </VBox>
                        <padding>
                            <Insets right="20.0" />
                        </padding>
                    </HBox>

                    <!-- Barra de búsqueda y botón agregar -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0" prefHeight="50.0">
                        <VBox.margin>
                            <Insets left="20.0" right="20.0" top="20.0" />
                        </VBox.margin>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="400.0" styleClass="search-bar">
                            <children>
                                <FontIcon iconLiteral="fa-search" iconSize="19" styleClass="search-icon" />
                                <TextField fx:id="searchField" prefHeight="30.0" prefWidth="350.0"
                                           promptText="Buscar administrador" styleClass="search-field" />
                            </children>
                        </HBox>
                        <Button fx:id="addButton" prefHeight="40.0"
                                styleClass="add-button" text="Agregar administrador">
                            <graphic>
                                <FontIcon iconLiteral="fa-plus" iconSize="19" styleClass="add-icon" />
                            </graphic>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>

                    <!-- Tabla de administradores -->
                    <TableView fx:id="adminTable" prefHeight="450.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colNo" text="No." />
                            <TableColumn fx:id="colNombreCompleto" text="Nombre completo" />
                            <TableColumn fx:id="colUsuario" text="Usuario" />
                            <TableColumn fx:id="colCorreo" text="Correo" />
                            <TableColumn fx:id="colEstado" text="Estado" />
                            <TableColumn fx:id="colAcciones" text="Acciones" />
                        </columns>
                        <VBox.margin>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                        </VBox.margin>
                    </TableView>

                    <!-- Mensaje sin resultados -->
                    <Label fx:id="lblSinResultados"
                           text="No se encontraron resultados"
                           visible="false"
                           alignment="CENTER"
                           maxWidth="Infinity"
                           style="-fx-text-fill: brown; -fx-font-weight: bold;">
                        <VBox.margin>
                            <Insets left="20.0" top="0.0" bottom="10.0" />
                        </VBox.margin>
                    </Label>
                </children>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
