<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.collections.FXCollections?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="mx.edu.utez.biblioteca.controller.EditAdminController"
            prefWidth="950" prefHeight="570" style="-fx-background-color: #F1EFEF;">

    <!-- Foto -->
    <VBox layoutX="30" layoutY="70">
        <ImageView fx:id="imageView" fitWidth="160" fitHeight="160" preserveRatio="true"/>
        <Button fx:id="btnSeleccionarImagen" text="Seleccionar archivo"
                onAction="#onSeleccionarImagen" style="-fx-background-color: #EDE7E3; -fx-text-fill: #A38F85;"/>
    </VBox>

    <!-- Título del modal -->
    <Label layoutX="30" layoutY="20" text="Editar información del administrador"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Campos de texto -->
    <Label layoutX="250" layoutY="70" text="Nombre completo:*"/>
    <TextField fx:id="tfNombre" layoutX="250" layoutY="95" prefWidth="200"/>

    <Label layoutX="470" layoutY="70" text="Correo:*"/>
    <TextField fx:id="tfCorreo" layoutX="470" layoutY="95" prefWidth="200"/>

    <Label layoutX="690" layoutY="70" text="Teléfono:*"/>
    <TextField fx:id="tfTelefono" layoutX="690" layoutY="95" prefWidth="200"/>

    <Label layoutX="250" layoutY="135" text="Usuario:*"/>
    <TextField fx:id="tfUsuario" layoutX="250" layoutY="160" prefWidth="200"/>

    <Label layoutX="470" layoutY="135" text="Contraseña:*"/>
    <StackPane layoutX="470" layoutY="160" prefWidth="160">
        <!-- Campo oculto -->
        <PasswordField fx:id="pfContrasena" promptText="Contraseña"
                       prefWidth="160" style="-fx-padding: 0 30 0 5;"/>

        <!-- Campo visible -->
        <TextField fx:id="tfContrasenaVisible" promptText="Contraseña"
                   prefWidth="160" visible="false" managed="false"
                   style="-fx-padding: 0 30 0 5;"/>

        <!-- Botón del ojo dentro del campo -->
        <Button fx:id="btnTogglePassword"
                style="-fx-background-color: transparent; -fx-cursor: hand;"
                maxHeight="20"
                prefWidth="30"
                StackPane.alignment="CENTER_RIGHT"
                translateX="-5">
            <graphic>
                <FontIcon iconLiteral="fa-eye" iconSize="16"/>
            </graphic>
        </Button>
    </StackPane>

    <Label layoutX="690" layoutY="135" text="Rol:*"/>
    <TextField fx:id="tfRol" layoutX="690" layoutY="160" prefWidth="200" editable="false"/>

    <Label layoutX="250" layoutY="200" text="Estado:*"/>
    <ComboBox fx:id="cbEstado" layoutX="250" layoutY="225" prefWidth="200">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Activo"/>
                <String fx:value="Inactivo"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label layoutX="30" layoutY="280" text="Dirección:"/>
    <TextField fx:id="tfDireccion" layoutX="30" layoutY="305" prefWidth="860"/>

    <!-- Botones -->
    <HBox layoutX="670" layoutY="500" spacing="10">
        <Button text="Cancelar" onAction="#onCancelar" style="-fx-background-color: #EDE7E3; -fx-text-fill: #A38F85;"/>
        <Button text="Guardar" onAction="#onGuardar" style="-fx-background-color: #A38F85; -fx-text-fill: white;"/>
    </HBox>

</AnchorPane>
