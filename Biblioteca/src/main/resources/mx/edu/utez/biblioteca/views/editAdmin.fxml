<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="mx.edu.utez.biblioteca.controller.EditAdminController"
            prefWidth="950" prefHeight="570" style="-fx-background-color: #F1EFEF;">

    <!-- Foto -->
    <VBox layoutX="30" layoutY="70">
        <ImageView fx:id="imageView" fitWidth="160" fitHeight="160" preserveRatio="true"/>
        <Button fx:id="btnSeleccionarImagen" text="Seleccionar archivo"
                onAction="#onSeleccionarImagen" style="-fx-background-color: #EDE7E3; -fx-text-fill: #A38F85;"/>
    </VBox>

    <!-- Este es el título del modal -->
    <Label layoutX="30" layoutY="20" text="Editar información del administrador"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>


    <!-- Estos son los campos de texto del modal -->
    <!-- Nombre -->
    <Label layoutX="250" layoutY="70" text="Nombre completo:*"/>
    <TextField fx:id="tfNombre" layoutX="250" layoutY="95" prefWidth="200"/>



</AnchorPane>
